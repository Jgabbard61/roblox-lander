generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "../node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model ContactForm {
  id              String    @id @default(cuid())
  name            String
  email           String
  companyName     String
  phoneNumber     String?
  estimatedUsage  String
  message         String?
  status          String    @default("new") // new, contacted, resolved
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@map("contact_forms")
}

model User {
  id                String   @id @default(cuid())
  email             String   @unique
  name              String
  companyName       String?
  credits           Int      @default(0)
  stripeCustomerId  String?  @unique
  isActive          Boolean  @default(true)
  isAdmin           Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  apiClient         ApiClient?
  verificationCache VerificationCache[]

  @@map("users")
}

model ApiClient {
  id                String   @id @default(cuid())
  userId            String   @unique
  apiKey            String   @unique
  apiKeyHash        String   @unique
  isActive          Boolean  @default(true)
  lastUsedAt        DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  apiUsageLogs      ApiUsageLog[]
  apiTransactions   ApiTransaction[]

  @@map("api_clients")
}

model ApiUsageLog {
  id                String   @id @default(cuid())
  apiClientId       String
  endpoint          String
  requestId         String   @unique
  creditsUsed       Int
  wasSuccessful     Boolean
  wasDuplicate      Boolean
  responseTime      Int
  ipAddress         String?
  userAgent         String?
  errorMessage      String?
  createdAt         DateTime @default(now())
  
  apiClient         ApiClient @relation(fields: [apiClientId], references: [id], onDelete: Cascade)

  @@map("api_usage_logs")
}

model ApiTransaction {
  id                String   @id @default(cuid())
  apiClientId       String
  type              String
  amount            Decimal
  creditsChanged    Int
  balanceBefore     Int
  balanceAfter      Int
  stripePaymentId   String?
  description       String
  createdAt         DateTime @default(now())
  
  apiClient         ApiClient @relation(fields: [apiClientId], references: [id], onDelete: Cascade)

  @@map("api_transactions")
}

model VerificationCache {
  id                String   @id @default(cuid())
  searchHash        String   @unique
  userId            String
  resultData        Json
  expiresAt         DateTime
  createdAt         DateTime @default(now())
  
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, searchHash])
  @@index([expiresAt])
  @@map("verification_cache")
}
